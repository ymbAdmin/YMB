    <script type="text/javascript">
        $(document).ready(function () {
            var screenWidth = -($(window).width() / 3.33);
            //console.log(screenWidth);
            //$('#left_logo').css('margin-left', screenWidth);
            $("#animate_about_move").click(function () {
                $('html, body').animate({
                    scrollTop: $("#about").offset().top
                }, 1000);
                return false;
            });
            $("#animate_store_move").click(function () {
                $('html, body').animate({
                    scrollTop: $("#store").offset().top
                }, 1000);
                return false;
            });
            $("#animate_beers_move").click(function () {
                $('html, body').animate({
                    scrollTop: $("#beers").offset().top
                }, 1000);
                return false;
            });
            //change
            //$('#navBar').css('border','none');
            //follow div plugin
            $.fn.navStickToTopAfterScroll = function (pos) {
                var $this = this,
                    $window = $(window);

                $window.scroll(function (e) {
                    var currentPosition = $window.scrollTop();
                    if (currentPosition <= pos) {
                        //page loads, nav at top
                        $this.css({
                            position: 'absolute',
                            top: pos,
                            'border': 'none',
                            'background': 'inherit'
                        });
                    } else {
                        $this.css({
                            position: 'fixed',
                            top: 0,
                            'border-bottom': '1px solid white',
                            'background': 'black'
                        });
                    }
                });
            };

            $('#navBar').navStickToTopAfterScroll(0);
        });
    </script>
</head>

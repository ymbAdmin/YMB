@using Microsoft.AspNet.Identity;
@using YMB.Extensions;
@model YMB.Models.FootballPoolViewModel
@{
    ViewBag.Title = "SendEmailReminder";
}

<h2 class="center-text ymb-yellow-text-and-shadow">Email Reminder</h2>&laquo;@Html.ActionLink("Back to Admin", "Index", "Admin")

<form method="post" action="~/FootballPoolAdmin/SendEmailReminder">
    @Html.Partial("_WeekDropDown")
</form>

<script type="text/javascript">
$(document).ready(function () {
    setWeekDropDown();
});

function setWeekDropDown() {
    var weekValue = 5;
   $("#weekId option[value="+ weekValue +"]").prop('selected', true);
}

</script>
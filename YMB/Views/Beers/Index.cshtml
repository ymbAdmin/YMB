@model IEnumerable<YMB.Models.Beers>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Beers";
    var beerCount = Model.Count();
}

<h2 class="ymb-yellow-text">YMB Beers (@beerCount)</h2>
@{
    var userName = User.Identity.GetUserName();
    if (userName == "asutton")
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}
@foreach (var item in Model)
{

    @*@Html.ActionLink("Edit", "Edit", new { id=item.beerId }) |
        @Html.ActionLink("Details", "Details", new { id=item.beerId }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.beerId })*@

    <div class="row">
        <div class="col-md-2">
            <div class="beer-img-slider">
                @foreach (var imageURL in item.beerImages)
                {
                    <div class="div-in-slider">
                        <img src=@imageURL class="beer-img img-thumbnail" />
                    </div>

                }
            </div>
        </div>
        <div class="col-md-7">
            <div><span style="font-size: smaller;"><b>@Html.DisplayNameFor(model => model.beerName)</b></span><br/><span style="padding-left: 15px; font-size: smaller; font-family:Helvetica Neue, Helvetica, Arial, sans-serif;"> @Html.DisplayFor(modelItem => item.beerName)</span></div>
            <div><span style="font-size: smaller;"><b>@Html.DisplayNameFor(model => model.beerStyle)</b></span><br /> <span style="padding-left: 15px;font-size: smaller; font-family:Helvetica Neue, Helvetica, Arial, sans-serif;">@Html.DisplayFor(modelItem => item.beerStyle)</span></div>
            <div><span style="font-size: smaller;"><b>@Html.DisplayNameFor(model => model.beerABV)</b></span><br /> <span style="padding-left: 15px;font-size: smaller; font-family:Helvetica Neue, Helvetica, Arial, sans-serif;">@Html.DisplayFor(modelItem => item.beerABV)</span></div>
            <div><span style="font-size: smaller;"><b>@Html.DisplayNameFor(model => model.beerCalories)</b></span><br /><span style="padding-left: 15px;font-size: smaller; font-family:Helvetica Neue, Helvetica, Arial, sans-serif;"> @Html.DisplayFor(modelItem => item.beerCalories)</span></div>
            <div><span style="font-size: smaller;"><b>@Html.DisplayNameFor(model => model.beerIBU)</b></span><br /><span style="padding-left: 15px;font-size: smaller; font-family:Helvetica Neue, Helvetica, Arial, sans-serif;"> @Html.DisplayFor(modelItem => item.beerIBU)</span></div>
            <div><span style="font-size: smaller;"><b>@Html.DisplayNameFor(model => model.beerDesc)</b></span><br /><span style="padding-left: 15px;font-size: smaller; font-family:Helvetica Neue, Helvetica, Arial, sans-serif;"> @Html.DisplayFor(modelItem => item.beerDesc)</span></div>
        </div>
    </div>
                //don't put line after last beer because footer has one already, looks wierd
                if (beerCount != 1)
                {
                    <hr />
                }
                beerCount--;
}


<script type="text/javascript">
    $(document).ready(function () {
        $('.beer-img-slider').slick({
            adaptiveHeight: false,
            dots: true,
            fade: true,
            draggable: true,
            prevArrow: true
        });
    });


</script>